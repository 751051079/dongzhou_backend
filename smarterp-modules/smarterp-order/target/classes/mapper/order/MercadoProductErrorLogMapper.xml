<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.smarterp.order.mapper.MercadoProductErrorLogMapper">

    <resultMap type="com.smarterp.order.domain.MercadoProductErrorLog" id="MercadoProductErrorLogResult">
        <result property="id" column="id"/>
        <result property="errorType" column="error_type"/>
        <result property="productId" column="product_id"/>
        <result property="productItemId" column="product_item_id"/>
        <result property="errorInfo" column="error_info"/>
        <result property="createdTime" column="created_time"/>
    </resultMap>

    <sql id="selectMercadoProductErrorLogVo">
        select id, product_id, error_type, error_info
        from mercado_product_error_log
    </sql>

    <select id="selectMercadoProductErrorLogList" parameterType="com.smarterp.order.domain.MercadoProductErrorLog"
            resultMap="MercadoProductErrorLogResult">
        <include refid="selectMercadoProductErrorLogVo"/>
        <where>
            <if test="errorType != null  and errorType != ''">
                and error_type = #{errorType}
            </if>
            <if test="productId != null ">
                and product_id = #{productId}
            </if>
            <if test="productItemId != null ">
                and product_item_id = #{productItemId}
            </if>
            <if test="errorInfo != null  and errorInfo != ''">
                and error_info = #{errorInfo}
            </if>
        </where>
        order by created_time desc
    </select>

    <select id="selectMercadoProductErrorLogById" parameterType="Long" resultMap="MercadoProductErrorLogResult">
        <include refid="selectMercadoProductErrorLogVo"/>
        where id = #{id}
    </select>

    <insert id="insertMercadoProductErrorLog" parameterType="com.smarterp.order.domain.MercadoProductErrorLog">
        insert into mercado_product_error_log
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">
                id,
            </if>
            <if test="errorType != null">
                error_type,
            </if>
            <if test="productId != null">
                product_id,
            </if>
            <if test="productItemId != null">
                product_item_id,
            </if>
            <if test="errorInfo != null">
                error_info,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">
                #{id},
            </if>
            <if test="errorType != null">
                #{errorType},
            </if>
            <if test="productId != null">
                #{productId},
            </if>
            <if test="productItemId != null">
                #{productItemId},
            </if>
            <if test="errorInfo != null">
                #{errorInfo},
            </if>
        </trim>
    </insert>

    <update id="updateMercadoProductErrorLog" parameterType="com.smarterp.order.domain.MercadoProductErrorLog">
        update mercado_product_error_log
        <trim prefix="SET" suffixOverrides=",">
            <if test="errorType != null">
                error_type = #{errorType},
            </if>
            <if test="productId != null">
                product_id = #{productId},
            </if>
            <if test="productItemId != null">
                product_item_id = #{productItemId},
            </if>
            <if test="errorInfo != null">
                error_info = #{errorInfo},
            </if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteMercadoProductErrorLogById" parameterType="Long">
        delete
        from mercado_product_error_log
        where id = #{id}
    </delete>

    <delete id="deleteMercadoProductErrorLogByIds" parameterType="String">
        delete from mercado_product_error_log where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>